<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="$(AvaloniaVersion)" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="**/*.xaml" />
    <AvaloniaResource Include="**/*.axaml" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaXaml Remove="Themes\Assets\Brushes.axaml" />
    <AvaloniaXaml Remove="Themes\Assets\Colors.axaml" />
    <AvaloniaXaml Remove="Themes\Controls\ContentDialog.axaml" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Update="Themes\Assets\Brushes.axaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Update="Themes\Assets\Colors.axaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Update="Themes\Controls\ContentDialog.axaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
  </ItemGroup>
</Project>
